@model RN_International_Website.Models.TeamMember

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <h2 class="text-white text-center">
            @((Model.Id != 0) ? "Update" : "Create") Team Member
        </h2>
    </div>

    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <!-- Hidden Inputs -->
            <input asp-for="Id" type="hidden" />
            <input asp-for="PhotoUrl" type="hidden" />

            <!-- Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Role -->
            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                <input asp-for="Role" class="form-control" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <!-- Upload Image -->
            <div class="mb-3">
                <label for="Photo" class="form-label">Upload Image</label>
                <input type="file" name="Photo" id="Photo" class="form-control" />
                <span class="text-muted">Max size: 2MB</span>
            </div>

            <!-- Social Media Links -->
            <div class="mb-3">
                <label asp-for="FacebookUrl" class="form-label">Facebook</label>
                <input asp-for="FacebookUrl" class="form-control" placeholder="Facebook Profile URL (Optional)" />
                <span asp-validation-for="FacebookUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TwitterUrl" class="form-label">Twitter</label>
                <input asp-for="TwitterUrl" class="form-control" placeholder="Twitter Profile URL (Optional)" />
                <span asp-validation-for="TwitterUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LinkedInUrl" class="form-label">LinkedIn</label>
                <input asp-for="LinkedInUrl" class="form-control" placeholder="LinkedIn Profile URL (Optional)" />
                <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="InstagramUrl" class="form-label">Instagram</label>
                <input asp-for="InstagramUrl" class="form-control" placeholder="Instagram Profile URL (Optional)" />
                <span asp-validation-for="InstagramUrl" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    @((Model.Id != 0) ? "Update" : "Create")
                </button>
                <a asp-controller="TeamMember" asp-action="Index" class="btn btn-outline-secondary">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
