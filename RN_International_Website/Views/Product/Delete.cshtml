@model RN_International_Website.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1 class="text-danger">Delete Product</h1>

<div class="alert alert-warning">
    <strong>Warning:</strong> Are you sure you want to delete this product? This action cannot be undone.
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title text-primary">@Model.Title</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded border" />
                }
                else
                {
                    <p class="text-muted">No image available.</p>
                }
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Brand</dt>
                    <dd class="col-sm-8">@Model.Brand</dd>

                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8">@Model.Category?.Name ?? "Uncategorized"</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
        </form>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </div>
</div>
